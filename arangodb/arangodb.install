post_install() {
  useradd -U arangodb --home /var/lib/arangodb  &> /dev/null
  chown arangodb:arangodb /var/lib/arangodb &> /dev/null
  chown arangodb:arangodb /var/log/arangodb &> /dev/null
}

post_upgrade() {
  post_install $1
}

pre_remove() {
  userdel arangodb &> /dev/null
}

