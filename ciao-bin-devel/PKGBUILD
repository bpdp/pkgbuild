pkgname=ciao-bin-devel
pkgver=1.15
pkgrel=1712
pkgdesc="General-purpose programming language (support ISO-Prolog) which supports logic, constraint, functional, higher-order, and OOP styles. From Debian package. Development version"
arch=('i686')
url="http://ciao-lang.org"
license=('LGPL' 'GPL')
conflicts=('ciao-bin')
depends=('bash')
makedepends=('deb2targz')
checkdepends=()
optdepends=()
install=ciao-bin-devel.install
provides=()
source=(http://ciao-lang.org/packages/master/a8c821b77338ac87c9b85a68402264368c3f5b9f/ciaode_$pkgver-$pkgrel.ga8c821b_i386.deb)
md5sums=('5b75bc49be2937a98e250486053b5951')

build() {
  deb2targz ciaode_$pkgver-$pkgrel.ga8c821b_i386.deb
}

check() {
  true
}

package() {
  cd $srcdir
  tar -xzvf ciaode_$pkgver-$pkgrel.ga8c821b_i386.tar.gz -C "$pkgdir"
}

